<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Estilo para TextBox -->
    <Style TargetType="TextBox" x:Key="FormTextBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="BorderBrush" Value="#072741"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,2,0,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para PasswordBox -->
    <Style TargetType="PasswordBox" x:Key="FormPasswordBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="BorderBrush" Value="#072741"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,2,0,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="PasswordBox">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="5">
                        <ScrollViewer x:Name="PART_ContentHost"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Estilo para Labels (TextBlock de títulos) -->
    <Style TargetType="TextBlock" x:Key="FormLabel">
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="#072741"/>
        <Setter Property="Margin" Value="0,5,0,2"/>
    </Style>

    <!-- Estilo para Botón principal -->
    <Style TargetType="Button" x:Key="PrimaryButton">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Margin" Value="0,40,0,0"/>
        <Setter Property="Background" Value="#0A2A45"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <!-- Hover: cambia color y escala -->
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#145A8A"/>
            </Trigger>
            <!-- Presionado: cambia color y escala -->
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#072741"/>
                <Setter Property="RenderTransform">
                    <Setter.Value>
                        <ScaleTransform ScaleX="0.98" ScaleY="0.98"/>
                    </Setter.Value>
                </Setter>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Footer -->
    <Style TargetType="TextBlock" x:Key="FormFooter">
        <Setter Property="FontSize" Value="11"/>
        <Setter Property="Foreground" Value="Gray"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,20,0,0"/>
    </Style>

    <Style x:Key="CustomCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="#0A2A45"/>
        <!-- Color de la v y del texto -->
        <Setter Property="Margin" Value="0,2,0,2"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="BorderBrush" Value="#E35802"/>
        <!-- Borde del cuadradito -->
    </Style>


 <!-- OTROS ESTILOS GENERALES -->
    <!-- Estilo para ComboBox -->
    <Style TargetType="ComboBox" x:Key="FormComboBox">
        <Setter Property="Height" Value="30"/>
        <Setter Property="BorderBrush" Value="#072741"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Margin" Value="0,2,0,10"/>
        <Setter Property="HorizontalContentAlignment" Value="Left"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="5,0"/>
    </Style>

    <!-- Título de formulario -->
    <Style x:Key="FormHeaderIcon" TargetType="Image" BasedOn="{StaticResource HeaderIcon}">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
    </Style>

    <Style x:Key="FormHeaderTitle" TargetType="TextBlock" BasedOn="{StaticResource HeaderTitle}">
        <Setter Property="FontSize" Value="16"/>
    </Style>

    
</ResourceDictionary>